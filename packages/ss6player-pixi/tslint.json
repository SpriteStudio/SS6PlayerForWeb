{
  "extends": [
    "tslint-config-standard"
  ],
  "linterOptions": {
    "exclude": [
      "bin",
      "**/ssfb_generated.*"
    ]
  },
  "rules": {
    "semicolon": true,
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "no-empty": false,
    "variable-name": false,
    "space-before-function-paren": false,
    "indent": [true, "spaces", 2]
  }
}
